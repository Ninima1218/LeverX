{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["../shared/*"]
    },
    "types": ["node", "express", "cors"],
    "typeRoots": [
      "../node_modules/@types",
      "./node_modules/@types"
    ]
  },
  "include": ["src", "../shared"],
  "exclude": ["node_modules", "dist"]
}
