{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "outDir": "./dist",
  
    "baseUrl": "..", 
    "paths": {
      "@shared/*": ["shared/*"]
    },

    "types": ["node"],
    "typeRoots": [
      "../node_modules/@types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "../shared/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}