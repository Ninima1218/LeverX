{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "rootDir": "..",
    "outDir": "./dist",

    "types": ["node"],
    "typeRoots": [
      "../node_modules/@types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "../shared/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "../src",
    "../public",
    "../dist"
  ]
}
