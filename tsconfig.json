{
  "compilerOptions": {
    "jsx": "react",
    "module": "esnext",
    "target": "es2019",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./shared/*"]
    },
    "skipLibCheck": true
  },
  "include": ["src", "shared"],
  "exclude": ["node_modules", "dist", "server"]
}
